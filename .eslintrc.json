{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "func-names": "off",
    "no-plusplus": "off"
  },
  "overrides": [
    {
      "files": ["models/*", "passport.js"],
      "rules": {
        "no-param-reassign": "off"
      }
    }
  ]
}
